@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="content">
    
    <div class="jumbotron transparentMuch">
        <h1>'16 Color Fest</h1>
    </div>
    
    <div class="row">
        <div class="col-sm-offset-3 col-md-offset-3 col-sm-5 col-md-8 img-rounded content transparentSlight">
            <h4 style="text-align: center">Please register below</h4>

            <div class="row">
                <div class="col-md-offset-1 col-md-4">Name:</div>
                <div class="col-md-6">
                    <input type="text" class="form-control" />
                </div>
            </div>
            <div class="row">
                <div class="col-md-offset-1 col-md-4">ID:</div>
                <div class="col-md-6">
                    <input type="text" class="form-control" />
                </div>
            </div>
            <div class="row">
                <div class="col-md-offset-1 col-md-4">Birthday:</div>
                <div class="col-md-6">
                    <input type="text" class="form-control" />
                </div>
            </div>
            <div class="row">
                <div class="col-md-offset-1 col-md-4">Subscribe to news</div>
                <div class="col-md-6">
                    <input type="checkbox" checked="checked" class="form-control" />
                </div>
            </div>
            <hr/>
            <div class="col-sm-offset-1 col-sm-11">
                <input type="button" class="btn-info" value="Register" style="width: 100px" />

            </div>
        </div>
            
    </div>
</div>






@section scripts
{
    <script src="~/Scripts/knockout-3.4.0.js"></script>
    <script type="text/javascript">


        @{

            var links = new
            {
                registerLink = @Url.Action("Register", "Home"),
                unRegisterLink = @Url.Action("UnRegister", "Home"),
                unSubscribe = @Url.Action("UnSubscribe", "Home"),
                getRegisteredStatus = @Url.Action("GetRegisteredStatus", "Home")

            };


            var initialData = new
            {
                links = links
            };
    }



        $().ready(function() {
            site.page = site.pageFactory(@Html.Raw(Json.Encode(initialData)));
        });




    </script>
}