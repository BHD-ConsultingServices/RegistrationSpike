
<div class="row" data-bind="visible: currentState() == 'GetStatus'">
    <div class="col-sm-offset-3 col-md-offset-2 col-sm-5 col-md-8 img-rounded content transparentSlight">
        <h4 style="text-align: center">Please get status below</h4>

        <div class="row">
            <div class="col-md-offset-1 col-md-4">Identity Number:</div>
            <div class="col-md-6">
                <input type="text" class="form-control" data-bind="value: registerModel.identityNumber" />
            </div>
        </div>

        <hr />
        <div class="col-sm-offset-1 col-sm-11">
            <input type="button" class="btn-info" value="Get Status" data-bind="click: getRegisteredStatus, enable: allowIdOperations" style="width: 100px" />
            <span data-bind="text: message" class="message"></span>
        </div>
    </div>
</div>


